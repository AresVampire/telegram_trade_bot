{
  "name": "telegram-swap-bot",
  "version": "0.0.1",
  "description": "Telegram swap bot",
  "type": "module",
  "scripts": {
    "format": "pnpm --parallel /^format:/",
    "format:src": "prettier --write ./src",
    "format:prisma": "prisma format",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "build": "tsup --clean",
    "dev": "pnpm --parallel /^dev:/",
    "dev:bot": "tsup --watch --onSuccess \"node dist/bot.js\"",
    "dev:worker": "tsup --watch --onSuccess \"node dist/worker.js\"",
    "start": "node dist/bot.js",
    "start:worker": "node dist/worker.js",
    "prepare": "husky install",
    "postinstall": "pnpm prisma generate"
  },
  "private": true,
  "dependencies": {
    "@grammyjs/conversations": "^1.2.0",
    "@grammyjs/hydrate": "^1.4.1",
    "@grammyjs/i18n": "^1.0.2",
    "@grammyjs/parse-mode": "^1.9.0",
    "@grammyjs/ratelimiter": "^1.2.0",
    "@grammyjs/storage-redis": "^2.4.2",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@injectivelabs/contracts": "^1.14.6",
    "@injectivelabs/networks": "^1.14.6",
    "@injectivelabs/sdk-ts": "^1.14.7",
    "@injectivelabs/sdk-ui-ts": "^1.14.7",
    "@injectivelabs/ts-types": "^1.14.6",
    "@injectivelabs/utils": "^1.14.6",
    "@injectivelabs/wallet-ts": "^1.14.7",
    "@prisma/client": "^5.11.0",
    "bullmq": "^5.5.4",
    "dotenv": "16.4.5",
    "envalid": "latest",
    "ethers": "^6.11.1",
    "fastify": "^4.26.2",
    "grammy": "^1.21.2",
    "ioredis": "^5.3.2",
    "node-graceful-shutdown": "^1.1.5",
    "pino": "8.20.0",
    "pino-pretty": "11.0.0",
    "tsup": "^8.0.2",
    "viem": "^2.9.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@mermaid-js/mermaid-cli": "^11.2.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "20.12.5",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.11.0",
    "prisma-erd-generator": "^1.11.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^8.7.0"
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=10.2.3"
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  },
  "packageManager": "pnpm@9.0.6+sha256.0624e30eff866cdeb363b15061bdb7fd9425b17bc1bb42c22f5f4efdea21f6b3"
}
